<div class="card card-body">
  <h3>Edit Video Idea</h3>
  <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="title" id="title" class="form-control" placeholder="The art of the deal" required value="{{idea.title}}">
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      <input type="text" name="author" id="author" class="form-control" placeholder="Donald J. Trump" required value="{{idea.author}}">
    </div>
    <div class="form-group">
      <label for="bookCoverUrl">Book cover photo</label>
      <input type="text" name="bookCoverUrl" id="bookCoverUrl" class="form-control" placeholder="URL to book cover picture"
        required value={{idea.bookCoverUrl}}>
    </div>
    <div class="form-group">
      <label for="notes">Notes</label>
      <textarea name="notes" id="notes" class="form-control" placeholder="Extremely amazing book. Well done DJT"
        required>{{idea.notes}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-block">SUBMIT</button>
  </form>
</div>